<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit My Review</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }
        .container { max-width: 800px; margin: 0 auto; }
        .header {
            background: white;
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            margin-bottom: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .btn {
            padding: 10px 18px;
            border-radius: 10px;
            background: #6c757d;
            color: white;
            border: none;
            font-size: 14px;
            cursor: pointer;
            text-decoration: none;
            font-weight: bold;
        }
        .btn:hover { background: #545b62; }
        .btn-primary { background: #28a745; }
        .btn-primary:hover { background: #1e7e34; }
        .card {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }
        .form-group { margin-bottom: 20px; }
        label {
            display: block;
            margin-bottom: 6px;
            font-weight: bold;
            color: #2c3e50;
        }
        input, textarea {
            width: 100%;
            padding: 10px;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            font-size: 16px;
            font-family: inherit;
        }
        textarea { min-height: 120px; resize: vertical; }
        .message {
            margin-top: 10px;
            padding: 10px;
            border-radius: 6px;
            display: none;
        }
        .success { background: #d4edda; color: #155724; }
        .error { background: #f8d7da; color: #721c24; }
        #imagePreview img {
            max-width: 100%;
            max-height: 200px;
            border-radius: 8px;
        }
        .small-text {
            font-size: 0.85rem;
            color: #6c757d;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="header">
        <h1>Edit My Review</h1>
        <div>
            <a href="/my-reviews" class="btn">← Back to My Reviews</a>
        </div>
    </div>

    <div class="card">
        <form id="editForm">
            <div class="form-group">
                <label for="business_name">Restaurant Name</label>
                <input type="text" id="business_name" required>
            </div>

            <div class="form-group">
                <label for="location_city">City</label>
                <input type="text" id="location_city">
            </div>

            <div class="form-group">
                <label for="categories">Category</label>
                <input type="text" id="categories" placeholder="e.g., Italian, Japanese">
            </div>

            <!-- Image upload (no separate button) -->
            <div class="form-group">
                <label for="image_file">Image</label>
                <input type="file" id="image_file" accept="image/*">
                <div class="small-text">
                    Leave empty to keep the current image. If you choose a new file, it will be uploaded to GitHub when you save.
                </div>
                <small id="uploadStatus" style="display:block; margin-top:5px; color:#6c757d;"></small>

                <div id="imagePreview" style="margin-top:10px; display:none;">
                    <img id="previewImg" src="" alt="Preview">
                </div>
            </div>
            <input type="hidden" id="image_url">

            <div class="form-group">
                <label for="review_stars">Rating (1–5)</label>
                <input type="number" id="review_stars" min="1" max="5" required>
            </div>

            <div class="form-group">
                <label for="review_text">Your Review</label>
                <textarea id="review_text" required></textarea>
            </div>

            <div class="form-group">
                <label for="review_date">Visit Date</label>
                <input type="date" id="review_date">
            </div>

            <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>

        <div id="message" class="message"></div>
    </div>
</div>

<script>
    const token = localStorage.getItem('token');
    const user = JSON.parse(localStorage.getItem('user'));

    if (!token || !user) {
        window.location.href = '/login';
    }

    // URL: /my-reviews/:id/edit
    const pathParts = window.location.pathname.split('/');
    const reviewId = pathParts[pathParts.length - 2];

    const messageDiv = document.getElementById('message');
    const uploadStatus = document.getElementById('uploadStatus');

    function showMessage(text, type) {
        messageDiv.textContent = text;
        messageDiv.className = `message ${type}`;
        messageDiv.style.display = 'block';
    }

    async function loadReview() {
        try {
            const res = await fetch(`/api/reviews/${reviewId}`, {
                headers: {
                    'Authorization': `Bearer ${token}`,
                    'Content-Type': 'application/json'
                }
            });

            if (!res.ok) {
                showMessage('Unable to load review for editing.', 'error');
                return;
            }

            const data = await res.json();
            const review = data.data || data.review || data;

            if (review.user_name !== user.username) {
                showMessage('You are not allowed to edit this review.', 'error');
                document.getElementById('editForm').style.display = 'none';
                return;
            }

            document.getElementById('business_name').value = review.business_name || '';
            document.getElementById('location_city').value =
                review.location && review.location.city ? review.location.city : '';
            document.getElementById('categories').value =
                review.categories && review.categories.length ? review.categories.join(', ') : '';
            document.getElementById('review_stars').value = review.review_stars || 5;
            document.getElementById('review_text').value = review.review_text || '';
            document.getElementById('review_date').value = review.review_date
                ? new Date(review.review_date).toISOString().split('T')[0]
                : '';

            const imgUrl =
                review.image_url ||
                (review.photos && review.photos[0] && review.photos[0].photo_url) ||
                '';

            document.getElementById('image_url').value = imgUrl;

            if (imgUrl) {
                const preview = document.getElementById('imagePreview');
                const previewImg = document.getElementById('previewImg');
                previewImg.src = imgUrl;
                preview.style.display = 'block';
            }
        } catch (err) {
            console.error(err);
            showMessage('Server error while loading review.', 'error');
        }
    }

    // Local preview when user picks a new file (does not upload yet)
    document.getElementById('image_file').addEventListener('change', (e) => {
        const file = e.target.files[0];
        const preview = document.getElementById('imagePreview');
        const previewImg = document.getElementById('previewImg');

        if (file) {
            const url = URL.createObjectURL(file);
            previewImg.src = url;
            preview.style.display = 'block';
            uploadStatus.textContent = 'New image selected. It will be uploaded when you save.';
            uploadStatus.style.color = '#6c757d';
        } else {
            preview.style.display = 'none';
            uploadStatus.textContent = '';
        }
    });

    document.getElementById('editForm').addEventListener('submit', async (e) => {
        e.preventDefault();

        try {
            // 1) If there is a new file, upload it to GitHub first
            const fileInput = document.getElementById('image_file');
            let finalImageUrl = document.getElementById('image_url').value || '';

            if (fileInput.files.length) {
                uploadStatus.textContent = 'Uploading image...';
                uploadStatus.style.color = '#6c757d';

                const file = fileInput.files[0];
                const formData = new FormData();
                formData.append('image', file);

                const uploadRes = await fetch('/api/uploads/image', {
                    method: 'POST',
                    headers: {
                        'Authorization': `Bearer ${token}`
                        // Do NOT set Content-Type here; browser sets multipart boundary
                    },
                    body: formData
                });

                const uploadData = await uploadRes.json();

                if (!uploadRes.ok || !uploadData.success) {
                    uploadStatus.textContent = uploadData.message || 'Image upload failed.';
                    uploadStatus.style.color = '#e74c3c';
                    showMessage('Image upload failed. Review not updated.', 'error');
                    return;
                }

                finalImageUrl = uploadData.url;
                document.getElementById('image_url').value = finalImageUrl;

                uploadStatus.textContent = 'Image uploaded successfully.';
                uploadStatus.style.color = '#28a745';
            }

            // 2) Now send the updated review (including image URL)
            const payload = {
                business_name: document.getElementById('business_name').value,
                review_text: document.getElementById('review_text').value,
                review_stars: parseInt(document.getElementById('review_stars').value, 10),
                review_date: document.getElementById('review_date').value,
                image_url: finalImageUrl || '',
                categories: document.getElementById('categories').value
                    ? document.getElementById('categories').value.split(',').map(c => c.trim())
                    : [],
                location: {
                    city: document.getElementById('location_city').value || ''
                }
            };

            const res = await fetch(`/api/reviews/${reviewId}`, {
                method: 'PUT',
                headers: {
                    'Authorization': `Bearer ${token}`,
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(payload)
            });

            const data = await res.json();

            if (!res.ok || !data.success) {
                showMessage(data.message || 'Failed to update review.', 'error');
                return;
            }

            showMessage('Review updated successfully!', 'success');
            setTimeout(() => {
                window.location.href = `/my-reviews/${reviewId}`;
            }, 1500);
        } catch (err) {
            console.error(err);
            showMessage('Server error while updating review.', 'error');
        }
    });

    loadReview();
</script>
</body>
</html>
