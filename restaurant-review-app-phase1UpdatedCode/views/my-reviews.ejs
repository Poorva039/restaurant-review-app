<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Reviews - Restaurant Reviews</title>
    <style>
        /* Copy the same styles from dashboard.ejs */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }
        .container {
            max-width: 1000px;
            margin: 0 auto;
        }
        .header {
            background: white;
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            margin-bottom: 30px;
        }
        .top-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        .btn {
            padding: 12px 20px;
            border-radius: 10px;
            background: #007bff;
            color: white;
            border: none;
            font-size: 16px;
            cursor: pointer;
            transition: 0.3s ease;
            font-weight: bold;
            text-decoration: none;
            display: inline-block;
        }
        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }
        .btn-secondary { background: #6c757d; }
        .btn-secondary:hover { background: #545b62; }
        .btn-success { background: #28a745; }
        .btn-success:hover { background: #1e7e34; }
        .card {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            margin-bottom: 20px;
        }
        .review-item {
            border: 1px solid #e9ecef;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 15px;
            transition: 0.3s ease;
        }
        .review-item:hover {
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        .review-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }
        .business-name {
            font-weight: bold;
            color: #2c3e50;
            font-size: 1.1rem;
        }
        .review-stars {
            color: #ffc107;
            font-weight: bold;
        }
        .review-date {
            color: #7f8c8d;
            font-size: 0.9rem;
        }
        .review-text {
            color: #495057;
            line-height: 1.5;
            margin-bottom: 15px;
        }
        .review-actions {
            display: flex;
            gap: 10px;
        }
        .btn-small {
            padding: 8px 15px;
            font-size: 14px;
        }
        .empty-state {
            text-align: center;
            padding: 40px;
            color: #6c757d;
        }
        .pagination {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-top: 20px;
        }
        .pagination-btn {
            padding: 8px 15px;
            border: 1px solid #dee2e6;
            background: white;
            border-radius: 5px;
            cursor: pointer;
        }
        .pagination-btn.active {
            background: #007bff;
            color: white;
            border-color: #007bff;
        }
        .loading {
            text-align: center;
            padding: 40px;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <div class="top-bar">
                <h1>My Reviews</h1>
                <div>
                    <a href="/add-review" class="btn btn-success" style="margin-right: 10px;">+ Add Review</a>
                    <a href="/dashboard" class="btn btn-secondary">‚Üê Back to Dashboard</a>
                </div>
            </div>
            <p>All your restaurant reviews in one place</p>
        </div>

        <div class="card">
            <div id="reviewsList">
                <div class="loading">Loading your reviews...</div>
            </div>

            <div class="pagination" id="pagination"></div>
        </div>
    </div>

    <script>
        const token = localStorage.getItem('token');
        const user = JSON.parse(localStorage.getItem('user'));
        let currentPage = 1;
        const reviewsPerPage = 10;

        if (!token || !user) {
            window.location.href = '/login';
        } else {
            loadMyReviews();
        }

        async function loadMyReviews(page = 1) {
            try {
                const response = await fetch(`/api/dashboard?page=${page}&limit=${reviewsPerPage}`, {
                    headers: {
                        'Authorization': `Bearer ${token}`,
                        'Content-Type': 'application/json'
                    }
                });

                const data = await response.json();

                if (data.success) {
                    displayReviews(data.data.recentReviews, data.data.pagination);
                } else {
                    showError('Failed to load reviews');
                }
            } catch (error) {
                console.error('Error loading reviews:', error);
                showError('Network error. Please try again.');
            }
        }

        function displayReviews(reviews, pagination) {
            const reviewsList = document.getElementById('reviewsList');
            const paginationContainer = document.getElementById('pagination');

            if (reviews.length === 0) {
                reviewsList.innerHTML = `
                    <div class="empty-state">
                        <div style="font-size: 3rem; margin-bottom: 15px; opacity: 0.5;">üìù</div>
                        <h3>No Reviews Yet</h3>
                        <p>You haven't written any reviews yet.</p>
                        <a href="/add-review" class="btn btn-success" style="margin-top: 15px;">
                            Write Your First Review
                        </a>
                    </div>
                `;
                paginationContainer.innerHTML = '';
                return;
            }

            reviewsList.innerHTML = reviews.map(review => `
                <div class="review-item">
                    <div class="review-header">
                        <div class="business-name">${review.business_name}</div>
                        <div class="review-stars">${'‚òÖ'.repeat(review.review_stars)}${'‚òÜ'.repeat(5 - review.review_stars)} ${review.review_stars}/5</div>
                    </div>
                    <div class="review-date">
                        ${new Date(review.review_date).toLocaleDateString()}
                        ${review.location && review.location.city ? ` ‚Ä¢ ${review.location.city}` : ''}
                    </div>
                    <div class="review-text">
                        ${review.review_text}
                    </div>
                    <div class="review-actions">
                        <button class="btn btn-primary btn-small" onclick="viewReview('${review._id}')">View</button>
                        <button class="btn btn-danger btn-small" onclick="deleteReview('${review._id}')">Delete</button>
                    </div>
                </div>
            `).join('');

            // Pagination
            if (pagination.totalPages > 1) {
                let paginationHTML = '';
                
                if (pagination.page > 1) {
                    paginationHTML += `<button class="pagination-btn" onclick="changePage(${pagination.page - 1})">Previous</button>`;
                }
                
                for (let i = 1; i <= pagination.totalPages; i++) {
                    paginationHTML += `
                        <button class="pagination-btn ${i === pagination.page ? 'active' : ''}" 
                                onclick="changePage(${i})">
                            ${i}
                        </button>
                    `;
                }
                
                if (pagination.page < pagination.totalPages) {
                    paginationHTML += `<button class="pagination-btn" onclick="changePage(${pagination.page + 1})">Next</button>`;
                }
                
                paginationContainer.innerHTML = paginationHTML;
            } else {
                paginationContainer.innerHTML = '';
            }
        }

        function changePage(page) {
            currentPage = page;
            loadMyReviews(page);
        }

        async function deleteReview(reviewId) {
            if (!confirm('Are you sure you want to delete this review?')) {
                return;
            }

            try {
                const response = await fetch(`/api/dashboard/reviews/${reviewId}`, {
                    method: 'DELETE',
                    headers: {
                        'Authorization': `Bearer ${token}`,
                        'Content-Type': 'application/json'
                    }
                });

                const data = await response.json();

                if (data.success) {
                    alert('Review deleted successfully!');
                    loadMyReviews(currentPage);
                } else {
                    alert(data.message || 'Failed to delete review');
                }
            } catch (error) {
                console.error('Error deleting review:', error);
                alert('Network error. Please try again.');
            }
        }

        function viewReview(reviewId) {
            window.location.href = `/api/reviews/${reviewId}`;
        }

        function showError(message) {
            const reviewsList = document.getElementById('reviewsList');
            reviewsList.innerHTML = `
                <div class="empty-state">
                    <div style="color: #e74c3c; font-size: 3rem; margin-bottom: 15px;">‚ùå</div>
                    <h3>Error</h3>
                    <p>${message}</p>
                    <button class="btn btn-primary" onclick="loadMyReviews()" style="margin-top: 15px;">
                        Try Again
                    </button>
                </div>
            `;
        }
    </script>
</body>
</html>