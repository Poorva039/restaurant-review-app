<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Review Details</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }
        .container { max-width: 900px; margin: 0 auto; }
        .header {
            background: white;
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            margin-bottom: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .btn {
            padding: 10px 18px;
            border-radius: 10px;
            background: #6c757d;
            color: white;
            border: none;
            font-size: 14px;
            cursor: pointer;
            text-decoration: none;
            font-weight: bold;
        }
        .btn:hover { background: #545b62; }
        .btn-primary { background: #007bff; }
        .btn-primary:hover { background: #0056b3; }
        .btn-danger {
            background: #e74c3c;
        }
        .btn-danger:hover {
            background: #c0392b;
        }
        .card {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }
        .business-name {
            font-size: 2rem;
            font-weight: bold;
            color: #2c3e50;
            margin-bottom: 5px;
        }
        .meta { color: #7f8c8d; font-size: 0.95rem; margin-bottom: 10px; }
        .stars { color: #ffc107; font-weight: bold; margin-bottom: 15px; }
        .image-wrapper { margin: 20px 0; }
        .image-wrapper img {
            width: 100%;
            max-height: 350px;
            object-fit: cover;
            border-radius: 12px;
        }
        .review-text { color: #34495e; line-height: 1.7; margin-bottom: 20px; }
        .byline { color: #7f8c8d; }
        .error { color: #e74c3c; text-align: center; padding: 20px; }
    </style>
</head>
<body>
<div class="container">
    <div class="header">
        <h1>My Review</h1>
        <div>
            <a href="/my-reviews" class="btn">← Back to My Reviews</a>
            <a href="/dashboard" class="btn">Dashboard</a>
        </div>
    </div>

    <div id="content">
        <div class="card">
            <p>Loading review...</p>
        </div>
    </div>
</div>

<script>
    const token = localStorage.getItem('token');
    const user = JSON.parse(localStorage.getItem('user'));

    if (!token || !user) {
        window.location.href = '/login';
    }

    const pathParts = window.location.pathname.split('/');
    const reviewId = pathParts[pathParts.length - 1];

    async function loadReview() {
        const content = document.getElementById('content');

        try {
            const res = await fetch(`/api/reviews/${reviewId}`, {
                headers: {
                    'Authorization': `Bearer ${token}`,
                    'Content-Type': 'application/json'
                }
            });

            if (!res.ok) {
                content.innerHTML = `<div class="card error">Unable to load review (status ${res.status}).</div>`;
                return;
            }

            const data = await res.json();
            const review = data.data || data.review || data; // depending on your API shape

            // Ensure this review belongs to the logged-in user
            if (review.user_name !== user.username) {
                content.innerHTML = `<div class="card error">You are not allowed to view this review.</div>`;
                return;
            }

            const imgUrl =
                review.image_url ||
                (review.photos && review.photos.length > 0 && review.photos[0].photo_url) ||
                'https://via.placeholder.com/800x350?text=No+Image';

            const fullAddress = review.location
    ? [
        review.location.address,
        review.location.city,
        review.location.state,
        review.location.postal_code
      ].filter(Boolean).join(', ')
    : '';

const coordsHtml =
    review.location && review.location.latitude && review.location.longitude
        ? `
            <div class="meta">
                Coordinates: ${review.location.latitude}, ${review.location.longitude}
                • <a href="https://www.google.com/maps?q=${review.location.latitude},${review.location.longitude}"
                     target="_blank" rel="noopener">
                      View on map
                  </a>
            </div>
          `
        : '';

            content.innerHTML = `
                <div class="card">
                    <div class="business-name">${review.business_name}</div>
                    <div class="meta">
                        ${fullAddress}
                        ${review.categories && review.categories.length ? ' • ' + review.categories.join(', ') : ''}
                        • Reviewed on ${new Date(review.review_date).toLocaleDateString()}
                    </div>
                    <div class="stars">
                        ${'★'.repeat(review.review_stars)}${'☆'.repeat(5 - review.review_stars)}
                        ${review.review_stars}/5
                    </div>
                    <div class="image-wrapper">
                        <img src="${imgUrl}" alt="${review.business_name}">
                    </div>
                    <div class="review-text">${review.review_text}</div>
                    <div class="byline">
                        By <strong>${review.user_name}</strong>
                    </div>
                    ${coordsHtml}
                    <div style="margin-top: 20px; display: flex; gap: 10px;">
                        <button class="btn btn-primary" onclick="editReview()">Edit Review</button>
                        <button class="btn btn-danger" onclick="deleteReview()">Delete Review</button>
                    </div>
                </div>
            `;

        } catch (err) {
            console.error(err);
            content.innerHTML = `<div class="card error">Server error while loading review.</div>`;
        }
    }

    function editReview() {
        window.location.href = `/my-reviews/${reviewId}/edit`;
    }

    async function deleteReview() {
        if (!confirm('Are you sure you want to delete this review?')) {
            return;
        }

        try {
            const res = await fetch(`/api/dashboard/reviews/${reviewId}`, {
                method: 'DELETE',
                headers: {
                    'Authorization': `Bearer ${token}`,
                    'Content-Type': 'application/json'
                }
            });

            const data = await res.json();

            if (!res.ok || !data.success) {
                alert(data.message || 'Failed to delete review.');
                return;
            }

            alert('Review deleted successfully.');
            window.location.href = '/my-reviews';
        } catch (err) {
            console.error(err);
            alert('Server error while deleting review.');
        }
    }


    loadReview();
</script>
</body>
</html>
